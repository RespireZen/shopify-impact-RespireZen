<!-- sections/espacement.liquid -->
<section
  class="custom-spacer"
  style="height: {{ section.settings.spacer_height }}; background-color: {{ section.settings.spacer_color }}; padding: 0; margin: 0; border: 0;">
</section>

<style>
  .custom-spacer {
    width: 100%;
    display: block;
    line-height: 0;
  }

  @media screen and (max-width: 768px) {
    .custom-spacer {
      height: auto !important;
    }
  }
</style>

{% schema %}
{
  "name": "Espacement",
  "tag": "section",
  "class": "custom-spacer-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "spacer_height",
      "label": "Hauteur de l'espacement",
      "default": "60px",
      "options": [
        { "value": "1px", "label": "Petit (1px)" },
        { "value": "20px", "label": "Moyen (20px)" },
        { "value": "60px", "label": "Grand (60px)" },
        { "value": "100px", "label": "Tr√®s grand (100px)" },
        { "value": "150px", "label": "Immense (150px)" }
      ]
    },
    {
      "type": "color",
      "id": "spacer_color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Espacement"
    }
  ]
}
{% endschema %}
