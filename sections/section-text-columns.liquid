<!-- sections/section-text-columns.liquid -->
<section class="section color-background-1" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <div class="text-center mb-10">
        <h2 class="component-heading" style="font-weight: {{ section.settings.title_weight }}; font-size: {{ section.settings.title_size }}; color: {{ section.settings.title_color }};">
          {{ section.settings.title }}
        </h2>
      </div>
    {% endif %}

    <div class="grid grid--3-col-desktop grid--2-col-tablet grid--1-col-mobile gap-6">
      {% for block in section.blocks %}
        <div class="grid__item">
          <div
            class="rounded-xl p-6 md:p-8 text-center shadow-md"
            style="background-color: #eaf6ff; color: {{ section.settings.block_text_color }};"
          >
            <{{ block.settings.heading_tag }}
              class="font-bold text-lg md:text-xl leading-snug mb-3"
              style="font-weight: {{ block.settings.title_weight }};">
              {{ block.settings.title }}
            </{{ block.settings.heading_tag }}>

            <p class="text-base md:text-lg leading-relaxed">
              {{ block.settings.text }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Triple image + texte",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre de la section",
      "default": "Respire Zen en quelques chiffres"
    },
    {
      "type": "select",
      "id": "title_size",
      "label": "Taille du titre principal",
      "default": "2.5rem",
      "options": [
        { "value": "2rem", "label": "Standard H2" },
        { "value": "2.5rem", "label": "Grand (comme H1)" },
        { "value": "3rem", "label": "Très grand" }
      ]
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Poids du titre principal",
      "default": "700",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Semi-gras" },
        { "value": "700", "label": "Gras" }
      ]
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Couleur du titre principal",
      "default": "#0c2340"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond de la section",
      "default": "#f8f9fb"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte global",
      "default": "#0c2340"
    },
    {
      "type": "color",
      "id": "block_text_color",
      "label": "Couleur du texte dans les blocs",
      "default": "#0c2340"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Colonne",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titre du bloc",
          "default": "2 000 nez débouchés"
        },
        {
          "type": "select",
          "id": "heading_tag",
          "label": "Balise du titre",
          "default": "h3",
          "options": [
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" },
            { "value": "h4", "label": "H4" }
          ]
        },
        {
          "type": "select",
          "id": "title_weight",
          "label": "Poids du titre",
          "default": "700",
          "options": [
            { "value": "400", "label": "Normal" },
            { "value": "600", "label": "Semi-gras" },
            { "value": "700", "label": "Gras" }
          ]
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texte du bloc",
          "default": "Respire Zen c'est déjà plus de 2 000 personnes aidées dont les problèmes de nez bouchés ont été soulagés."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Triple image + texte",
      "category": "Contenu",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "2 000 nez débouchés",
            "text": "Respire Zen c'est déjà plus de 2 000 personnes aidées dont les problèmes de nez bouchés ont été soulagés."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "800 couples sauvés des ronflements",
            "text": "Parce qu’un nez dégagé, c’est aussi des nuits plus calmes vous et votre partenaire."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Économisez 730h de sommeil par an",
            "text": "En moyenne, on perd 730 heures de sommeil par an. Les bandes nasales de Respire Zen vous aident à maintenir un sommeil réparateur sans interruption."
          }
        }
      ]
    }
  ]
}
{% endschema %}
