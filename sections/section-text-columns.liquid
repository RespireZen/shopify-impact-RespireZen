<!-- sections/section-text-columns.liquid -->
<section class="section" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="section__inner">

    {% if section.settings.title != blank %}
      <div class="section__header text-center mb-6">
        <h2 class="h2" style="font-weight: {{ section.settings.title_weight }}; font-size: {{ section.settings.title_size }}; color: {{ section.settings.title_color }};">
          {{ section.settings.title }}
        </h2>
      </div>
    {% endif %}

    <div class="grid grid--3-col-desktop grid--2-col-tablet grid--1-col-mobile gap-lg">
      {% for block in section.blocks %}
        <div class="card" style="background-color: {{ section.settings.block_bg_color }}; color: {{ section.settings.block_text_color }};">
          <div class="card__content text-center px-4 py-5">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 400 }}"
                alt="IcÃ´ne"
                class="mb-4"
                loading="lazy"
                style="max-width: {{ block.settings.image_size }};"
              >
            {% endif %}

            <{{ block.settings.heading_tag }}
              class="{{ block.settings.heading_tag }} mb-2"
              style="font-weight: {{ block.settings.title_weight }};">
              {{ block.settings.title }}
            </{{ block.settings.heading_tag }}>

            <p class="feature-text" style="font-size: {{ block.settings.text_size }}; font-family: 'Assistant', sans-serif;">
              {{ block.settings.text }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
</section>
