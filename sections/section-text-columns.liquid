<!-- sections/section-text-columns.liquid -->
<section class="section color-background-1" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <div class="text-center mb-6">
        <h2 class="component-heading" style="font-weight: {{ section.settings.title_weight }}; font-size: {{ section.settings.title_size }}; color: {{ section.settings.title_color }};">
          {{ section.settings.title }}
        </h2>
      </div>
    {% endif %}

    <div class="grid grid--uniform grid--3-col-desktop grid--2-col-tablet grid--1-col-mobile">
      <!-- Bloc 1 -->
      <div class="grid__item">
        <div class="card-wrapper" style="background-color: {{ section.settings.block_bg_color }}; color: {{ section.settings.block_text_color }};">
          <div class="card card--soft text-center px-4 py-5">
            <h3 class="component-heading mb-2" style="font-weight: {{ section.settings.subtitle1_weight }};">
              {{ section.settings.subtitle1 }}
            </h3>
            <p class="component-text" style="font-size: {{ section.settings.text1_size }};">
              {{ section.settings.text1 }}
            </p>
          </div>
        </div>
      </div>

      <!-- Bloc 2 -->
      <div class="grid__item">
        <div class="card-wrapper" style="background-color: {{ section.settings.block_bg_color }}; color: {{ section.settings.block_text_color }};">
          <div class="card card--soft text-center px-4 py-5">
            <h3 class="component-heading mb-2" style="font-weight: {{ section.settings.subtitle2_weight }};">
              {{ section.settings.subtitle2 }}
            </h3>
            <p class="component-text" style="font-size: {{ section.settings.text2_size }};">
              {{ section.settings.text2 }}
            </p>
          </div>
        </div>
      </div>

      <!-- Bloc 3 -->
      <div class="grid__item">
        <div class="card-wrapper" style="background-color: {{ section.settings.block_bg_color }}; color: {{ section.settings.block_text_color }};">
          <div class="card card--soft text-center px-4 py-5">
            <h3 class="component-heading mb-2" style="font-weight: {{ section.settings.subtitle3_weight }};">
              {{ section.settings.subtitle3 }}
            </h3>
            <p class="component-text" style="font-size: {{ section.settings.text3_size }};">
              {{ section.settings.text3 }}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Colonnes fixes - 3 blocs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre de la section",
      "default": "Votre partenaire santé au quotidien"
    },
    {
      "type": "select",
      "id": "title_size",
      "label": "Taille visuelle du titre principal",
      "default": "2.5rem",
      "options": [
        { "value": "2rem", "label": "Standard H2" },
        { "value": "2.5rem", "label": "Grand (comme H1)" },
        { "value": "3rem", "label": "Très grand" }
      ]
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Poids du titre",
      "default": "600",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Semi-gras" },
        { "value": "700", "label": "Gras" }
      ]
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Couleur du titre principal",
      "default": "#1d2c3c"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond de la section",
      "default": "#f8f9fb"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte global",
      "default": "#1d2c3c"
    },
    {
      "type": "color",
      "id": "block_bg_color",
      "label": "Couleur de fond des blocs",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "block_text_color",
      "label": "Couleur du texte dans les blocs",
      "default": "#1d2c3c"
    },

    // Bloc 1
    {
      "type": "text",
      "id": "subtitle1",
      "label": "Sous-titre du bloc 1",
      "default": "Accédez aux soins plus facilement"
    },
    {
      "type": "select",
      "id": "subtitle1_weight",
      "label": "Poids du sous-titre bloc 1",
      "default": "600",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Semi-gras" },
        { "value": "700", "label": "Gras" }
      ]
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Texte du bloc 1",
      "default": "Réservez des consultations vidéo ou en présentiel, et recevez des rappels pour ne jamais les manquer."
    },
    {
      "type": "select",
      "id": "text1_size",
      "label": "Taille du texte bloc 1",
      "default": "1.2rem",
      "options": [
        { "value": "1.2rem", "label": "Standard" },
        { "value": "1.4rem", "label": "Grand" },
        { "value": "1.6rem", "label": "Très grand" }
      ]
    },

    // Bloc 2
    {
      "type": "text",
      "id": "subtitle2",
      "label": "Sous-titre du bloc 2",
      "default": "Bénéficiez de soins personnalisés"
    },
    {
      "type": "select",
      "id": "subtitle2_weight",
      "label": "Poids du sous-titre bloc 2",
      "default": "600",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Semi-gras" },
        { "value": "700", "label": "Gras" }
      ]
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Texte du bloc 2",
      "default": "Échangez avec vos soignants par message, obtenez des conseils préventifs et recevez des soins quand vous en avez besoin."
    },
    {
      "type": "select",
      "id": "text2_size",
      "label": "Taille du texte bloc 2",
      "default": "1.2rem",
      "options": [
        { "value": "1.2rem", "label": "Standard" },
        { "value": "1.4rem", "label": "Grand" },
        { "value": "1.6rem", "label": "Très grand" }
      ]
    },

    // Bloc 3
    {
      "type": "text",
      "id": "subtitle3",
      "label": "Sous-titre du bloc 3",
      "default": "Gérez votre santé"
    },
    {
      "type": "select",
      "id": "subtitle3_weight",
      "label": "Poids du sous-titre bloc 3",
      "default": "600",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Semi-gras" },
        { "value": "700", "label": "Gras" }
      ]
    },
    {
      "type": "textarea",
      "id": "text3",
      "label": "Texte du bloc 3",
      "default": "Rassemblez facilement toutes vos informations de santé et celles de ceux qui comptent pour vous."
    },
    {
      "type": "select",
      "id": "text3_size",
      "label": "Taille du texte bloc 3",
      "default": "1.2rem",
      "options": [
        { "value": "1.2rem", "label": "Standard" },
        { "value": "1.4rem", "label": "Grand" },
        { "value": "1.6rem", "label": "Très grand" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Colonnes fixes - 3 blocs",
      "category": "Contenu"
    }
  ]
}
{% endschema %}